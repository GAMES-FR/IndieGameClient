      <size w="50%" h="5%" />
      <position x="0" y="0" />
    </label>
    <data id="STAT_GAMES">
      <size w="25%" h="5%" />
      <position x="55%" y="0" />
    </data>

    <label text="Victories">
      <size w="50%" h="5%" />
      <position x="0" y="6%" />
    </label>
    <data id="STAT_VICTORIES" type="label">
      <size w="25%" h="5%" />
      <position x="55%" y="6%" />
    </data>
  </scroll>
</panel>
